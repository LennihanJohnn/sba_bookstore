<%= form_for(@book, html: { class: 'book-form panel panel-default' }) do |f| %>

  <div class="panel-body">
    <%= render partial: 'errors_full_messages', collection: @book.errors, as: :errors %>

    <div class="form-group">
      <%= f.label :title %><br>
      <%= f.text_field :title, class: 'form-control', placeholder: 'Book title' %>
    </div>
    <div class="form-group">
      <%= f.label :description %><br>
      <%= f.text_area :description, rows: 5, class: 'form-control', placeholder: 'In a few words...' %>
    </div>
    <div class="form-group">
      <%= f.label :image_url %><br>
      <%= f.text_field :image_url, class: 'form-control', placeholder: 'http://' %>
    </div>
  </div>

  <div class="panel-footer">
    <div class="row">
      <% unless @book.new_record? %>
        <div class="col-xs-2">
          <%= link_to icon('trash-o', 'Delete'), book_path(@book), method: :delete, class: 'btn btn-danger btn-lg', data: { disable_with: "#{icon('refresh', 'Deleting...', class: 'fa-spin').html_safe}", confirm: "Are you sure?"} %>
        </div>
      <% end %>
      <div class="<%= @book.new_record? ? "col-xs-12" : "col-xs-10" %> text-right">
        <%= button_tag submit[:text], method: submit[:method], class: 'btn btn-primary btn-lg', data: { disable_with: submit[:disable_with]} %>
        <% unless @book.new_record? %>
          <%= link_to 'Show', @book, class: 'btn btn-default btn-lg' %>
        <% end %>
        <%= link_to 'Back', books_path, class: 'btn btn-default btn-lg' %>
      </div>
    </div>
  </div>
<% end %>
