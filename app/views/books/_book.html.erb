<div class="book">
  <%= image_tag book.image_url, class: 'book-image thumbnail inline' %>
  <div class="book-info">
    <div class="book-title">
      <h3><%= book.title %>:</h3>
    </div>

    <div class="book-description">
      <%= book.description %>
    </div>
    <hr>
    <div class="book-actions pull-right">
      <%= link_to icon('shopping-cart', 'Add'), '#unimplemented', class: 'btn btn-success' %>
      <% unless params[:action] == 'show' %>
        <%= link_to "Show", book_path(book), class: 'btn btn-default' %>
      <% else %>
        <%= link_to "Edit", edit_book_path(book), class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>

<hr>
